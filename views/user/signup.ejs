<% layout('/layouts/boilerplate') %>  

 <div class="row mt-3">
        <div class="col-8 offset-2">
    <h2>Sign up on Wanderlust</h2>
    <form method="POST" action="/signup"  novalidate class="needs-validation">
        <br> 
        <div mb-3>
         <lable for="email" class="form-label">Email</lable>
        <input type="email" name="email"   class="form-control" required>
        <div class="invalid-feedback">Invalid</div>
        </div>
        <br>
        <div mb-3>
         <lable for="username" class="form-label">Username</lable>
        <input type="text" name="username"   class="form-control" required>
        <div class="invalid-feedback">looks good </div>
        </div>
        <br> 
        <div mb-3>
         <lable for="password" class="form-label">Password</lable>
        <input type="password" name="password"   class="form-control" required>
        <div class="invalid-feedback">looks good </div>
        </div>
        <br> 
        <button class="btn btn-success">SignUp</button>