<% layout('/layouts/boilerplate') %>    
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edit your listing</h3>
    <form method="POST" action="/listings/<%=listingg._id%>?_method=PUT"  novalidate class="needs-validation" enctype="multipart/form-data">
        <div mb-3>
         <lable for="title" class="form-label">Title</lable>
        <input type="text" name="listing[title]" value="<%=listingg.title%>"  class="form-control" required>
        <div class="invalid-feedback"> Please choose a title </div>
        </div>
        <br> 
        <div mb-3>
        <lable for="description" class="form-label">Description</lable>
       <textarea name="listing[description]"   class="form-control" required><%=listingg.description%> </textarea>
       <div class="invalid-feedback"> Please enter description </div>
       </div>
       <br> 
       <div  class="mb-3 col-md-6">
            Original Listing Image <br>
            <img src="<%=originalimage%> " class="listing-img" alt="anything">
       </div>
       <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" name="listing[image]" class="form-control">
        </div>
        <br> 
         <div mb-3>
             <lable for="price" class="form-label">Price</lable>
        <input type="number" name="listing[price]" value="<%=listingg.price%>"  class="form-control" required>
        <div class="invalid-feedback">Price should be valid </div>
        </div>
        <br> 
        <div class="row">
         <div class="mb-3 col-md-6">
         <lable for="location" class="form-label">Location</lable>
        <input type="text" name="listing[location]" value="<%=listingg.location%>"  class="form-control" required>
        <div class="invalid-feedback"> Location should be valid </div>
        </div>
        <br> 
          <div class="mb-3 col-md-6">
         <lable for="country" class="form-label">Country</lable>
        <input type="text" name="listing[country]" value="<%=listingg.country%>"  class="form-control" required>
         <div class="invalid-feedback">Country should be valid</div>
        </div>
         </div>
        <br> 
        <button class="btn btn-danger">Done</button>
        <br> <br>
    </form>
    </div>
    </div>
    </body>
